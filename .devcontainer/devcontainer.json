{
  "name": "React Game Migration",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:1-20-bullseye",

  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint"
      ]
    }
  },

  "forwardPorts": [3000, 5500],
  "portsAttributes": {
    "3000": {
      "label": "React Game App"
    },
    "5500": {
      "label": "Original HTML Game"
    }
  },

  "postCreateCommand": "npm ci && pip install -r server/requirements.txt"
}