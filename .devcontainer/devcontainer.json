{
  "name": "React Game Migration",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:1-20-bullseye",

  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint"
      ]
    }
  },

  "forwardPorts": [5173, 5174, 5175, 5500],
  "portsAttributes": {
    "5173": {
      "label": "Legacy Shell"
    },
    "5174": {
      "label": "React Migration (jQuery/Bootstrap)"
    },
    "5175": {
      "label": "Modern React Conversion"
    },
    "5500": {
      "label": "Legacy Game Server (Python)"
    }
  },

  "postCreateCommand": "npm ci && pip install -r server/requirements.txt" // Lockfile installation
}